# ===========================================
# SmartAudit Agent - Environment Configuration
# ===========================================
#
# IMPORTANT: Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!

# ============================================
# AI Model Configuration
# ============================================
# Gemini API Key for AI-driven analysis
GEMINI_API_KEY=your_gemini_api_key_here
LLM_MODEL=gemini-2.5-flash

# ============================================
# GitHub Configuration
# ============================================
# GitHub Personal Access Token with repo and PR permissions
GITHUB_TOKEN=your_github_token_here

# ============================================
# Blockchain Configuration (Arbitrum Sepolia)
# ============================================
# Private key for testnet wallet (NEVER use mainnet keys!)
TESTNET_PRIVATE_KEY=your_testnet_private_key_here

# Arbitrum Sepolia RPC URLs (comma-separated, will auto-select best)
RPC_URLS=https://arbitrum-sepolia-rpc.publicnode.com,https://endpoints.omniatech.io/v1/arbitrum/sepolia/public,wss://arbitrum-sepolia.drpc.org

# Chain ID for Arbitrum Sepolia
CHAIN_ID=421614

# ============================================
# Telegram Bot Configuration
# ============================================
# Telegram Bot Token from @BotFather
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Your Telegram Chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Web Server Configuration
# ============================================
# Port for the web UI and API server
PORT=3000

# Base URL for webhooks (production)
BASE_URL=http://localhost:3000

# ============================================
# Agent Configuration
# ============================================
# Enable/disable various features
ENABLE_STATIC_ANALYSIS=true
ENABLE_DYNAMIC_TESTING=true
ENABLE_AUTO_PR=true
ENABLE_TELEGRAM_NOTIFICATIONS=true

# Maximum time for analysis (in minutes)
MAX_ANALYSIS_TIME=30

# ============================================
# Logging & Debugging
# ============================================
LOG_LEVEL=info
DEBUG_MODE=false
